---
export const prerender = false;

import Badge from "../../components/Badge.astro";
import Container from "../../components/Container.astro";
import SiteLayout from "../../layouts/SiteLayout.astro";
import { getEbookDetail } from "../../lib/catalog";

const slug = Astro.params.slug;
if (!slug) throw new Response(null, { status: 404 });

const data = await getEbookDetail(slug);
if (!data) throw new Response(null, { status: 404 });

const ebook = data.kind === "api" ? data.ebook : data.ebook;
const rendered = data.kind === "local" ? await data.entry.render() : null;
const canDownload = ebook.status === "free" && Boolean(ebook.download_url);

const ebookSchema = {
  "@context": "https://schema.org",
  "@type": "Book",
  name: ebook.title,
  author: {
    "@type": ebook.author.trim().toLowerCase() === "irshados" ? "Organization" : "Person",
    name: ebook.author,
  },
  inLanguage: ebook.language,
  url: new URL(`/ebooks/${ebook.slug}`, Astro.site ?? Astro.url).toString(),
};
---

<SiteLayout title={ebook.title} description={ebook.description} schema={ebookSchema} ogImage={ebook.cover_image}>
  <section class="bg-white">
    <Container class="grid gap-8 py-12">
      <a
        href="/ebooks"
        class="no-underline text-sm font-semibold text-ink-700 hover:text-ink-900"
      >
        ‚Üê Back to Ebooks
      </a>

      <div class="grid gap-6 md:grid-cols-3 md:items-start">
        <div class="md:col-span-2">
          <div class="flex flex-wrap items-center gap-2">
            <Badge variant={ebook.status === "free" ? "success" : "warning"}>
              {ebook.status === "free" ? "Free" : "Coming soon"}
            </Badge>
            {ebook.category && (
              <span class="rounded-full bg-ink-50 px-2 py-0.5 text-xs font-medium text-ink-700">
                {ebook.category}
              </span>
            )}
            <span class="rounded-full bg-ink-50 px-2 py-0.5 text-xs font-medium text-ink-700">
              {ebook.language.toUpperCase()}
            </span>
          </div>

          <h1 class="mt-3 text-3xl font-semibold tracking-tight text-ink-950">{ebook.title}</h1>
          <p class="mt-2 text-sm text-ink-600">By {ebook.author}</p>
          <p class="mt-4 text-base leading-relaxed text-ink-700">{ebook.description}</p>

          <div class="mt-6 flex flex-wrap items-center gap-3">
            {canDownload ? (
              <a
                href={ebook.download_url}
                download
                class="no-underline rounded-lg bg-ink-900 px-4 py-2 text-sm font-semibold text-white hover:bg-ink-800"
              >
                Download PDF
              </a>
            ) : (
              <button
                type="button"
                disabled
                class="rounded-lg bg-ink-900 px-4 py-2 text-sm font-semibold text-white opacity-60"
              >
                Download (coming soon)
              </button>
            )}
            <a
              href="/contact"
              class="no-underline rounded-lg border border-ink-200 bg-white px-4 py-2 text-sm font-semibold text-ink-900 hover:bg-ink-50"
            >
              Request access
            </a>
          </div>

          <article class="prose prose-zinc mt-10 max-w-none">
            {rendered ? (
              <rendered.Content />
            ) : (
              <>
                <h2>Details</h2>
                <p>More details will appear here as the ebook ships.</p>
              </>
            )}
          </article>
        </div>

        <aside class="grid gap-4">
          {ebook.cover_image ? (
            <img
              src={ebook.cover_image}
              alt=""
              class="aspect-[16/10] w-full rounded-2xl object-cover ring-1 ring-inset ring-ink-100"
              loading="lazy"
            />
          ) : (
            <div class="aspect-[16/10] w-full rounded-2xl bg-gradient-to-br from-ink-50 to-white ring-1 ring-inset ring-ink-100" />
          )}

          {ebook.tags.length > 0 && (
            <div class="rounded-2xl border border-ink-100 bg-white p-5">
              <h2 class="text-sm font-semibold text-ink-900">Tags</h2>
              <div class="mt-3 flex flex-wrap gap-2">
                {ebook.tags.map((t) => (
                  <span class="rounded-full bg-ink-50 px-2 py-0.5 text-xs font-medium text-ink-700">
                    {t}
                  </span>
                ))}
              </div>
            </div>
          )}
        </aside>
      </div>
    </Container>
  </section>
</SiteLayout>
