---
export const prerender = true;

import Badge from "../../components/Badge.astro";
import Container from "../../components/Container.astro";
import SiteLayout from "../../layouts/SiteLayout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

type Props = { entry: CollectionEntry<"blog"> };

const { entry } = Astro.props;
const rendered = await entry.render();

function formatDate(date: Date) {
  return date.toLocaleDateString("en-GB", { year: "numeric", month: "long", day: "2-digit" });
}

const postSchema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: entry.data.title,
  datePublished: entry.data.publishedAt.toISOString(),
  description: entry.data.description,
  url: new URL(`/blog/${entry.slug}`, Astro.site ?? Astro.url).toString(),
};
---

<SiteLayout
  title={entry.data.title}
  description={entry.data.description}
  canonicalPath={`/blog/${entry.slug}`}
  schema={postSchema}
  noIndex
>
  <section class="bg-white">
    <Container class="grid gap-8 py-12">
      <a href="/blog" class="no-underline text-sm font-semibold text-ink-700 hover:text-ink-900">
        ‚Üê Back to Blog
      </a>

      <header class="grid gap-3">
        <div class="flex flex-wrap items-center gap-2">
          <Badge variant="neutral">{formatDate(entry.data.publishedAt)}</Badge>
          {entry.data.tags.slice(0, 6).map((t) => (
            <span class="rounded-full bg-ink-50 px-2 py-0.5 text-xs font-medium text-ink-700">
              {t}
            </span>
          ))}
        </div>
        <h1 class="text-3xl font-semibold tracking-tight text-ink-950">{entry.data.title}</h1>
        {entry.data.description && (
          <p class="max-w-2xl text-sm leading-relaxed text-ink-600">{entry.data.description}</p>
        )}
      </header>

      <article class="prose prose-zinc max-w-none">
        <rendered.Content />
      </article>
    </Container>
  </section>
</SiteLayout>
